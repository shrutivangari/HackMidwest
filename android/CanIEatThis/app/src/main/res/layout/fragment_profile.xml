<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="hmw.com.canieatthis.ProfileFragemnt"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prof_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="20dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/prof_name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Name1ew"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prof_age1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Age"
            android:textSize="20dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/prof_age2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="10"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/prof_gender1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Gender"
            android:textSize="20dp"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/prof_gender2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Male"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/prof_condition1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Conditions"
            android:textSize="20dp"
            android:paddingLeft="5dp"/>

        <ScrollView
            android:id="@+id/prof_scroll"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <ListView
                android:id="@+id/prof_condition2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

        </ScrollView>

    </LinearLayout>




</LinearLayout>

